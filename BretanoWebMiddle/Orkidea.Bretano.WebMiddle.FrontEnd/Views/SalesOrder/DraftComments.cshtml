
@model Orkidea.Bretano.WebMiddle.FrontEnd.Entities.ORDR

@{
    ViewBag.Title = "Pedidos::Comentarios";
}
<div class="container-fluid">
    @using (Html.BeginForm("DraftComments", "SalesOrder", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <h2>Pedidos</h2>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.draftComments, "Comentarios para cartera", new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.draftComments, new { @class = "form-control", title = "id del contacto", rows = 7 })                    
                </div>                
            </div>
        </div>
        <br />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <input type='submit' id='upload-files' value=' Terminar ' class="btn btn-info" />          
            </div>
        </div>
    </div>
    }
</div>
